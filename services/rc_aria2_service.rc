

# ariaNg html file
if [ ! -e "${dataPath}/ariaNg_ModifiedByHbl.html" ];then
	cp /usr/lib/server.lan/port80/ariaNg_ModifiedByHbl.html "${dataPath}/"
fi

# chmod for ssfs's  read write
if [ -d "${dataPath}/download" ] ;then
	chmod  0777 "${dataPath}/download"
fi


if [ -z "${aria2_port}" ];then
	aria2_port=(6800)
fi


# run docker container
docker run -d  \
	-v "${dataPath}":/data  \
	-p  ${aria2_port[0]}:6800  \
	--name="${container_name}"  \
	inthbl/aria2-armhf



